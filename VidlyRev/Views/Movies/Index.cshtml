@model VidlyRev.ViewModels.IndexMoviesViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

@if (Model.Movies.Count == 0)
{
    <text>We don't have any movies yet.</text>
}
else
{
    <ul>
        <li><strong>Customer</strong></li>
        @foreach (var item in Model.Movies)
        {
            <li><a href="/Customers/Movies/@item.Id">@item.Name</a></li>
        }
    </ul>
}